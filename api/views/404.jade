extends layouts/default

block content
	.ui.page.grid.top.margin
		.column
			.ui.huge.info.attached.icon.message
				i.frown.icon
				.content
					.header
						| Whoops! 404 error
					| That means what you were looking for isn't here...

			if (typeof error !== 'undefined')
				.ui.attached.segment
					pre
						code!= url + ' : ' + error
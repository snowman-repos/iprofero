	meta(charset='utf-8')
	meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
	meta(name='viewport', content='width=device-width,initial-scale=1')

	title= appName+' &ndash; '+title
	meta(http-equiv='Content-type', content='text/html;charset=UTF-8')
	meta(name="keywords", content="agency, management, tool, app, webapp, company, organisation, organise")
	meta(name="description", content="#{appName} - #{title}")

	link(href='/img/icons/favicon.ico', rel='shortcut icon', type='image/x-icon')
	
	//- Facebook Meta tags
	meta(property='fb:app_id', content='APP_ID')
	meta(property='og:title', content='#{appName} - #{title}')
	meta(property='og:description', content='#{appName} - #{title}')
	meta(property='og:type', content='website')
	meta(property='og:url', content='APP_URL')
	meta(property='og:image', content='APP_LOGO')
	meta(property='og:site_name', content='iProfero')
	meta(property='fb:admins', content='APP_ADMIN')


// Profile Template
// 
// Styles for user profiles
//
// Styleguide 6.1


.profile.page.grid
	margin-top 				$base-spacing-unit

.profile
	.ui.stackable.grid .row > .column:first-of-type
		border-top 			none
		margin 				0 5% 0 !important

	.ui.stackable.grid .row > .column:last-of-type
		margin 				1.5em 5% 1.5em !important

	.ui.stackable.grid .row > .sixteen.wide.column:last-of-type
		margin 				0 5% 0 !important

.ui.grid > .row > .profile.first.column
	position 				relative
	text-align 				center

.profile.avatar
	top 					0
	z-index 				5

	@media only screen and (min-width: 769px)
		left 				$base-spacing-unit
		position 			absolute

	&.edit
		cursor 				pointer

	.ui.reveal
		font-size 			1em !important
		height 				170px
		width 				170px

	i,
	img
		-webkit-border-radius 	85px
		   -moz-border-radius 	85px
		        border-radius 	85px
		display 				block
		height 					auto
		width 					170px

	i
		line-height 			170px
		margin-right 			0
		opacity 				1

		&.inverted.icon
			background 			rgba($cobalt, 1)

h1.ui.profile.header
	font-weight 				300
	margin-bottom 				0
	margin-top 					0
	text-align 					center

	@media only screen and (min-width: 769px)
		margin 					30px 0 0 200px
		text-align 				left

.profile.top.row

	@media only screen and (min-width: 769px)
		min-height 				70px

.ui.header .profile.sub.header
	font-weight					400
	margin-bottom				10px
	margin-top 					0
	text-align 					center

	@media only screen and (min-width: 769px)
		text-align 				left

.profile 
	.users.icon,
	.yuan.icon
		display 				inline-block

.profile.team.header
	font-weight 				300
	line-height 				1.7
	margin-bottom 				0

	@media only screen and (min-width: 769px)
		margin-left 			185px

.profile.dates.header
	line-height 				2.8
	background-color					#E0E0E0
	border-color						#E0E0E0
	color								rgba($black, 0.7)

tags-input.green .ngTagsInputList > li
	background-color 					$green
	border-color 						$green
	color								rgba($white, 0.8)

tags-input.green .ngTagsInputList > li:hover
	color								$white

	i.icon
		opacity 						1


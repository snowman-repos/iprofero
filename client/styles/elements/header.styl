// Header
//
// Headers provide a short summary of content
//
// .small - small header
// .large - normal (large) header
// .huge - huge header
// .massive - massive header
//
// Markup:
// <h2 class="ui header">
//   Account Settings
// </h2>
//
// Styleguide 2.4

.celled.grid h2.ui.header
	margin-bottom 		0

h5.ui.header
	font-size 			0.85rem
	line-height 		2
	margin-bottom 		0
	text-transform 		uppercase

.ui.massive.header
	font-size 			3em

	.floated.right.button
		display 		block
		float 			none
		margin-top 		1em

		@media only screen and (min-width: 769px)
			float 		right
			margin-top 	-3em

.breadcrumb + .ui.massive.header
	margin-top 			0

// Descriptive Headers
//
// Headers may have sub headers containing further context to the section
//
// Markup:
// <h2 class="ui header">
//   Account Settings
//   <div class="sub header">Manage your account settings and set e-mail preferences.</div>
// </h2>
// <h2 class="ui header">
//   <i class="settings icon"></i>
//   Account Settings
// </h2>
// <h2 class="ui header">
//   <i class="settings icon"></i>
//   <div class="content">
//     Account Settings
//     <div class="sub header">Manage your account settings and set e-mail preferences.</div>
//   </div>
// </h2>
//
// Styleguide 2.4.1

// Icon Headers
//
// A header can be formatted to emphasize an icon
//
// Markup:
// <div class="ui icon header">
//   <i class="circular question icon"></i>Questions
//   <div class="sub header">Have any questions? Contact Us</div>
// </div>
//
// Styleguide 2.4.2


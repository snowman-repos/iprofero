// Coloured Buttons
//
// A button can have different colours:
// 
// .black - black
// .green - green
// .red - red
// .yellow - yellow
// .blue - blue
// .purple - purple
// .teal - teal
// .orange - orange
// 
// Markup:
// <a class="ui {$modifiers} button">Button</a>
// 
// Styleguide 2.1.9

.ui.yellow.buttons .button,
.ui.yellow.button
	background-color				$yellow
	color							$white

.ui.yellow.buttons .button:hover,
.ui.yellow.buttons .button:hover,
.ui.yellow.button:hover,
.ui.yellow.buttons .active.button,
.ui.yellow.button.active
	background-color				darken($yellow, 8%)
	color							$white

.ui.cobalt.buttons .button:active,
.ui.cobalt.button:active
	background-color				darken($cobalt, 15%)
	color							$white

.ui.cobalt.buttons .button,
.ui.cobalt.button
	background-color				$cobalt
	color							$white

.ui.cobalt.buttons .button:hover,
.ui.cobalt.buttons .button:hover,
.ui.cobalt.button:hover,
.ui.cobalt.buttons .active.button,
.ui.cobalt.button.active
	background-color				darken($cobalt, 8%)
	color							$white

.ui.cobalt.buttons .button:active,
.ui.cobalt.button:active
	background-color				darken($cobalt, 15%)
	color							$white


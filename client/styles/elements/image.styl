// Sized Images
//
// An image may be formatted to be different sizes
//
// Markup:
// <div class="ui segment">
// 	<img class="ui tiny image" src="http://placehold.it/200x200">
// </div>
// <div class="ui segment">
// 	<img class="ui mini image" src="http://placehold.it/200x200">
// </div>
// <div class="ui segment">
// 	<img class="ui small image" src="http://placehold.it/200x200">
// </div>
// <div class="ui segment">
// 	<img class="ui large image" src="http://placehold.it/200x200">
// </div>
// <div class="ui segment">
// 	<img class="ui huge image" src="http://placehold.it/200x200">
// </div>
//
// Styleguide 2.6.8

// Image Groups
//
// A group of images can be formatted to have the same size.
//
// Markup:
// <div class="ui small images">
//   <img class="ui image" src="http://placehold.it/200x200">
//   <img class="ui image" src="http://placehold.it/200x200">
//   <img class="ui image" src="http://placehold.it/200x200">
//   <img class="ui image" src="http://placehold.it/200x200">
// </div>
//
// Styleguide 2.6.9

// Link Images
// 
// Images can be placed inside links
//
// Markup:
// <a href=""><img class="ui link image" src="http://placehold.it/200x200"></a>
//
// Styleguide 2.6.10

a
	.ui.link.image
		// transition			$slow-transition

	&:focus,
	&:hover

		.ui.link.image
			opacity 		0.8
			// transition		$slow-transition
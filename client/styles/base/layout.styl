// Layout
// 
// The base spacing unit for the application:
// 
// 25px - $base-spacing-unit
//
// Markup:
// <div style="background: #ccc; height: 45px; margin: {$modifiers}; width: 45px;"></div>
//
// Styleguide 1.3

$base-spacing-unit =		30px

.bottom.margin
	margin-bottom 			$base-spacing-unit !important

.top.margin
	margin-top 				$base-spacing-unit !important

.left.margin
	margin-left 			0.5 * $base-spacing-unit !important